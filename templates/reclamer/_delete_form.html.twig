<form method="post" action="{{ path('reclamer_delete', {'id': reclamer.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reclamer.id) }}">
    <button class="btn btn-success" >Delete</button>
</form>
